<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.kiang.quizapp.MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Welcome To Java Quiz App"
            android:textSize="25sp"
            android:textStyle="bold|italic" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q 1 - Can we compare int variable with a boolean variable?"
            android:textSize="16sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="True"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/false_correct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="False"
                android:textSize="12sp" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Q 2 - Select the features of Java?(Check all that apply)"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/Q2AnsCheckbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Object Oriented"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/Q2AnsCheckbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interpreted"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/Q2AnsCheckbox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Platform Independent"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/Q2AnsCheckbox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Robust"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/Q2AnsCheckbox5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Multi-threaded"
            android:textSize="12sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Q 3 - When is java invented"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/Q3Ans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Year"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q 4 - Who invented Java?"
            android:textSize="16sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mark Zuckerberg"
                android:textSize="12sp" />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bill Gates"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/Q4Ans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="James Gosling"
                android:textSize="12sp" />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guido van Rossum"
                android:textSize="12sp" />
        </RadioGroup>

        <Button
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:onClick="submit"
            android:text="Score" />


    </LinearLayout>
</ScrollView>